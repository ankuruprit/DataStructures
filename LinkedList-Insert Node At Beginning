
## INSERT A NODE AT BEGINNING OF A LINKED LIST ##

class Node:
    def __init__(self, data=None):
        self.data = data
        self.next = None

class LinkedList:
    def __init__(self):
        self.head = Node()

    # Append the node
    def Append(self, data):
        temp = Node(data)
        temp.next = self.head
        self.head = temp
        
    # Print the list as its created
    def Print(self):
        outPutList = []
        temp = self.head
        while temp.next != None:
            outPutList.append(temp.data)
            temp = temp.next
        print(outPutList)

# Main Function
if __name__ == '__main__':
    my_list = LinkedList()
    nums = int(input("How many numbers? - "))
    for n in range(nums):
        my_list.Append(int(input("Enter {} number: ".format(str(n+1)))))
        my_list.Print()

